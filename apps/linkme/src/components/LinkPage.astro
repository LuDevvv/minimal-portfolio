---
import "@fontsource/plus-jakarta-sans";
import "../styles/tailwind.css";
import {
    Github,
    Linkedin,
    Instagram,
    Globe,
    Briefcase,
    FileText,
    Mail,
    Check,
} from "lucide-astro";
import { useTranslations, ui } from "../i18n/ui";

interface Props {
    lang: keyof typeof ui;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const mainLinks = [
    {
        title: t("link.portfolio.title"),
        url: "https://portfolio.withlouis.com",
        icon: Globe,
        description: t("link.portfolio.desc"),
        featured: true,
    },
    {
        title: t("link.freelance.title"),
        url: "https://freelance.withlouis.com",
        icon: Briefcase,
        description: t("link.freelance.desc"),
        featured: false,
    },
    {
        title: t("link.blog.title"),
        url: "https://blog.withlouis.com",
        icon: FileText,
        description: t("link.blog.desc"),
        featured: false,
    },
];

const socialLinks = [
    {
        title: t("social.linkedin"),
        url: "https://linkedin.com/in/ludevvv",
        icon: Linkedin,
    },
    {
        title: t("social.github"),
        url: "https://github.com/ludevvv",
        icon: Github,
    },
    {
        title: t("social.instagram"),
        url: "https://instagram.com/ludevvv",
        icon: Instagram,
    },
];

const email = "ludevgarcialouis@gmail.com";
---

<html lang={lang} class="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{t("meta.title")}</title>
        <meta name="description" content={t("meta.description")} />
    </head>
    <body
        class="bg-canvas text-fg min-h-screen flex flex-col items-center justify-center py-12 px-4 relative overflow-hidden"
    >
        <!-- Background Effects -->
        <div class="fixed inset-0 z-0 pointer-events-none">
            <div
                class="absolute top-[-10%] left-[-10%] w-[500px] h-[500px] bg-primary/20 rounded-full blur-[120px] animate-blob"
            >
            </div>
            <div
                class="absolute bottom-[-10%] right-[-10%] w-[500px] h-[500px] bg-sky-500/20 rounded-full blur-[120px] animate-blob animation-delay-2000"
            >
            </div>
        </div>

        <main
            class="relative z-10 w-full max-w-sm mx-auto flex flex-col items-center"
        >
            <!-- Language Switcher -->
            <div class="fixed top-6 right-6 z-50 animate-fade-in-up">
                <a
                    href={lang === "es" ? "/en" : "/"}
                    class="flex items-center gap-2 px-3 py-1.5 rounded-full glass border border-glass-border hover:border-primary/50 transition-all duration-300 group shadow-sm bg-surface/50"
                    aria-label={lang === "es"
                        ? "Switch to English"
                        : "Cambiar a Español"}
                >
                    <Globe
                        class="w-3.5 h-3.5 text-primary group-hover:rotate-12 transition-transform"
                    />
                    <span
                        class="text-[10px] font-black uppercase tracking-widest text-fg"
                    >
                        {lang === "es" ? "EN" : "ES"}
                    </span>
                </a>
            </div>

            <!-- Profile Section -->
            <div class="mb-10 text-center animate-fade-in-up">
                <div class="relative w-[120px] h-[120px] mx-auto mb-6">
                    <div
                        class="w-full h-full rounded-full p-1 bg-gradient-to-br from-primary to-sky-400"
                    >
                        <div
                            class="w-full h-full rounded-full overflow-hidden bg-canvas border-4 border-canvas"
                        >
                            <img
                                src="https://github.com/ludevvv.png"
                                alt="Luis Garcia"
                                class="w-full h-full object-cover"
                            />
                        </div>
                    </div>
                    <!-- Verified Badge -->
                    <div
                        class="absolute bottom-1 right-1 bg-blue-500 text-white p-1 rounded-full border-[3px] border-canvas shadow-sm flex items-center justify-center w-8 h-8"
                        title={t("profile.verified")}
                    >
                        <Check class="w-4 h-4" stroke-width={4} />
                    </div>
                </div>

                <h1 class="text-3xl font-black mb-2 text-fg tracking-tighter">
                    Luis Garcia
                </h1>
                <p
                    class="text-fg-muted font-bold text-[10px] uppercase tracking-[0.2em] px-4 opacity-70 leading-relaxed max-w-[280px] mx-auto"
                >
                    {t("profile.role")}
                </p>
            </div>

            <!-- Main Links Section -->
            <div
                class="w-full flex flex-col gap-3 animate-fade-in-up"
                style="animation-delay: 0.1s;"
            >
                {
                    mainLinks.map((link) => (
                        <a
                            href={link.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class={`
                        relative group flex items-center justify-between w-full p-4 rounded-2xl border transition-all duration-300 transform hover:scale-[1.02] hover:shadow-xl
                        ${
                            link.featured
                                ? "bg-primary text-white border-primary hover:bg-primary/90 shadow-lg shadow-primary/20"
                                : "bg-surface hover:bg-surface-lighter border-glass-border hover:border-primary/30 text-fg"
                        }
                    `}
                        >
                            <div class="flex items-center gap-4">
                                <div
                                    class={`
                                p-2 rounded-xl transition-colors
                                ${link.featured ? "bg-white/20 text-white" : "bg-primary/5 text-primary group-hover:bg-primary/10"}
                            `}
                                >
                                    <link.icon class="w-5 h-5" />
                                </div>
                                <div class="text-left">
                                    <h3 class="font-bold text-sm">
                                        {link.title}
                                    </h3>
                                    {link.description && (
                                        <p
                                            class={`text-xs mt-0.5 ${link.featured ? "text-white/80" : "text-fg-muted"}`}
                                        >
                                            {link.description}
                                        </p>
                                    )}
                                </div>
                            </div>
                            <div
                                class={`transition-transform duration-300 group-hover:translate-x-1 ${link.featured ? "text-white" : "text-fg-muted group-hover:text-primary"}`}
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="lucide lucide-chevron-right"
                                >
                                    <path d="m9 18 6-6-6-6" />
                                </svg>
                            </div>
                        </a>
                    ))
                }
            </div>

            <!-- Social Links Section -->
            <div
                class="mt-8 flex items-center justify-center gap-4 animate-fade-in-up w-full"
                style="animation-delay: 0.2s;"
            >
                {
                    socialLinks.map((link) => (
                        <a
                            href={link.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="p-3 rounded-full bg-surface border border-glass-border text-fg-muted hover:text-primary hover:border-primary/50 hover:bg-surface-lighter hover:scale-110 hover:shadow-lg transition-all duration-300 group"
                            aria-label={link.title}
                        >
                            <link.icon class="w-6 h-6" />
                        </a>
                    ))
                }

                <div class="w-px h-6 bg-border mx-2"></div>

                <a
                    href={`mailto:${email}`}
                    class="p-3 rounded-full bg-surface border border-glass-border text-fg-muted hover:text-primary hover:border-primary/50 hover:bg-surface-lighter hover:scale-110 hover:shadow-lg transition-all duration-300"
                    aria-label={t("social.email")}
                >
                    <Mail class="w-6 h-6" />
                </a>
            </div>

            <!-- Footer -->
            <footer
                class="mt-12 text-center text-xs text-fg-muted/40 animate-fade-in-up font-medium"
                style="animation-delay: 0.3s;"
            >
                <p>© {new Date().getFullYear()} {t("footer")}</p>
            </footer>
        </main>
    </body>
</html>
