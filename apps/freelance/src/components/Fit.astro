---
import { getLangFromUrl, useTranslations } from "../i18n/ui";
import { Check, X } from "lucide-astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-16 md:py-24 px-6 relative overflow-hidden reveal">
    <div class="container mx-auto max-w-5xl">
        <div class="text-center mb-16">
            <span
                class="inline-block px-3 py-1 text-xs font-bold tracking-widest text-primary uppercase bg-primary/10 rounded-full mb-4"
            >
                {t("fit.badge")}
            </span>
            <h2 class="text-4xl md:text-5xl font-extrabold text-gradient">
                {t("fit.title")}
            </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
            <!-- Good Fit -->
            <div
                class="bg-surface rounded-3xl p-8 md:p-10 border border-green-500/20 shadow-lg shadow-green-500/5 hover:border-green-500/30 transition-colors relative overflow-hidden group"
            >
                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-green-500/10 blur-[80px] rounded-full pointer-events-none group-hover:bg-green-500/20 transition-colors"
                >
                </div>
                <h3
                    class="text-xl font-bold mb-8 flex items-center gap-3 text-fg"
                >
                    <span
                        class="w-8 h-8 rounded-full bg-green-500/10 flex items-center justify-center text-green-500"
                    >
                        <Check class="w-5 h-5" />
                    </span>
                    {t("fit.good.title")}
                </h3>
                <ul class="space-y-4">
                    <li class="flex items-start gap-4">
                        <Check class="w-5 h-5 text-green-500 shrink-0 mt-0.5" />
                        <span class="text-fg-muted font-medium"
                            >{t("fit.good.1")}</span
                        >
                    </li>
                    <li class="flex items-start gap-4">
                        <Check class="w-5 h-5 text-green-500 shrink-0 mt-0.5" />
                        <span class="text-fg-muted font-medium"
                            >{t("fit.good.2")}</span
                        >
                    </li>
                    <li class="flex items-start gap-4">
                        <Check class="w-5 h-5 text-green-500 shrink-0 mt-0.5" />
                        <span class="text-fg-muted font-medium"
                            >{t("fit.good.3")}</span
                        >
                    </li>
                    <li class="flex items-start gap-4">
                        <Check class="w-5 h-5 text-green-500 shrink-0 mt-0.5" />
                        <span class="text-fg-muted font-medium"
                            >{t("fit.good.4")}</span
                        >
                    </li>
                </ul>
            </div>

            <!-- Bad Fit -->
            <div
                class="bg-surface-lighter/50 rounded-3xl p-8 md:p-10 border border-border/50 transition-colors relative overflow-hidden"
            >
                <h3
                    class="text-xl font-bold mb-8 flex items-center gap-3 text-fg-muted"
                >
                    <span
                        class="w-8 h-8 rounded-full bg-fg-muted/10 flex items-center justify-center text-fg-muted"
                    >
                        <X class="w-5 h-5" />
                    </span>
                    {t("fit.bad.title")}
                </h3>
                <ul class="space-y-4 opacity-70">
                    <li class="flex items-start gap-4">
                        <X class="w-5 h-5 text-fg-muted shrink-0 mt-0.5" />
                        <span class="text-fg-muted">{t("fit.bad.1")}</span>
                    </li>
                    <li class="flex items-start gap-4">
                        <X class="w-5 h-5 text-fg-muted shrink-0 mt-0.5" />
                        <span class="text-fg-muted">{t("fit.bad.2")}</span>
                    </li>
                    <li class="flex items-start gap-4">
                        <X class="w-5 h-5 text-fg-muted shrink-0 mt-0.5" />
                        <span class="text-fg-muted">{t("fit.bad.3")}</span>
                    </li>
                    <li class="flex items-start gap-4">
                        <X class="w-5 h-5 text-fg-muted shrink-0 mt-0.5" />
                        <span class="text-fg-muted">{t("fit.bad.4")}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
