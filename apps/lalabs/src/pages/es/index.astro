---
import App from "../../components/App";

const title = "L.A. Labs | Estudio de Innovación de Software";
const description =
    "Escala sin fricción. Haz crecer tu organización sin dolores de cabeza operativos con L.A. Labs.";
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" href="/src/styles/global.css" />
        <title>{title}</title>
    </head>
    <body>
        <!-- Render the full React App for the Spanish locale -->
        <App lang="es" client:load />
    </body>
</html>
