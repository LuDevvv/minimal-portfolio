---
import "../styles/global.css";
import "@fontsource/geist-sans/400.css";
import "@fontsource/geist-sans/500.css";
import "@fontsource/geist-sans/600.css";
import "@fontsource/geist-sans/700.css";

interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "L.A. Labs - Engineering Next-Generation Digital Ecosystems.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | L.A. Labs</title>
    </head>
    <body
        class="bg-[#030014] text-slate-50 min-h-screen flex flex-col font-sans selection:bg-purple-500/30 selection:text-white"
    >
        <!-- Persistent Background Mesh Effect -->
        <div class="fixed inset-0 z-[-1] bg-mesh pointer-events-none"></div>

        <!-- Sticky Header/Nav matching image aesthetics -->
        <header
            class="fixed top-4 left-1/2 -translate-x-1/2 w-full max-w-5xl z-50"
        >
            <div
                class="mx-6 px-6 h-14 bg-white/[0.03] backdrop-blur-2xl border border-white/[0.08] rounded-full flex items-center justify-between shadow-2xl shadow-purple-900/10"
            >
                <a
                    href="/"
                    class="text-xl font-bold tracking-tight flex items-center gap-2"
                >
                    <div
                        class="w-6 h-6 rounded-md bg-gradient-to-tr from-purple-500 to-blue-500 flex items-center justify-center shadow-lg shadow-purple-500/30"
                    >
                        <span
                            class="text-[10px] text-white font-black leading-none mt-0.5"
                            >LA</span
                        >
                    </div>
                    <span class="text-white hidden sm:block">Labs.</span>
                </a>

                <nav
                    class="hidden md:flex gap-8 text-sm font-medium text-slate-300"
                >
                    <a
                        href="#services"
                        class="hover:text-white transition-colors">Expertise</a
                    >
                    <a
                        href="#platforms"
                        class="hover:text-white transition-colors"
                        >Our Platforms</a
                    >
                    <a
                        href="#benefits"
                        class="hover:text-white transition-colors">Why Us</a
                    >
                    <a href="/terms" class="hover:text-white transition-colors"
                        >Terms</a
                    >
                </nav>

                <div class="flex items-center">
                    <a
                        href="mailto:ludevgarcialouis@gmail.com"
                        class="text-sm font-semibold bg-white/10 hover:bg-white/20 transition duration-300 px-4 py-2 rounded-full border border-white/10"
                    >
                        Let's Talk
                    </a>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-grow pt-32">
            <slot />
        </main>

        <!-- Premium Footer -->
        <footer
            class="border-t border-white/[0.05] bg-black/40 mt-32 position-relative overflow-hidden"
        >
            <div
                class="absolute inset-0 bg-[radial-gradient(circle_at_bottom,_var(--tw-gradient-stops))] from-purple-900/10 via-transparent to-transparent"
            >
            </div>

            <div class="max-w-7xl mx-auto px-6 py-16 relative z-10">
                <div class="grid md:grid-cols-4 gap-12">
                    <div class="md:col-span-2">
                        <a
                            href="/"
                            class="text-2xl font-bold tracking-tight flex items-center gap-2 mb-4"
                        >
                            <div
                                class="w-8 h-8 rounded-lg bg-gradient-to-tr from-purple-500 to-blue-500 flex items-center justify-center shadow-lg shadow-purple-500/30"
                            >
                                <span
                                    class="text-xs text-white font-black leading-none mt-0.5"
                                    >LA</span
                                >
                            </div>
                            <span class="text-white">L.A. Labs.</span>
                        </a>
                        <p
                            class="text-slate-400 text-sm max-w-sm leading-relaxed"
                        >
                            A software innovation studio specializing in
                            edge-native, multi-tenant solutions. Engineering
                            modern ecosystems from the Dominican Republic to the
                            world.
                        </p>
                    </div>

                    <div>
                        <h4 class="text-white font-semibold mb-4">Studio</h4>
                        <ul class="space-y-3 text-sm text-slate-400">
                            <li>
                                <a
                                    href="#platforms"
                                    class="hover:text-purple-400 transition-colors"
                                    >Our Platforms</a>
                            </li>
                            <li>
                                <a
                                    href="#services"
                                    class="hover:text-purple-400 transition-colors"
                                    >Services</a>
                            </li>
                            <li>
                                <a
                                    href="mailto:ludevgarcialouis@gmail.com"
                                    class="hover:text-purple-400 transition-colors"
                                    >Contact</a>
                            </li>
                        </ul>
                    </div>

                    <div>
                        <h4 class="text-white font-semibold mb-4">Legal</h4>
                        <ul class="space-y-3 text-sm text-slate-400">
                            <li>
                                <a
                                    href="/privacy"
                                    class="hover:text-purple-400 transition-colors"
                                    >Privacy Policy</a>
                            </li>
                            <li>
                                <a
                                    href="/terms"
                                    class="hover:text-purple-400 transition-colors"
                                    >Terms of Service</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div
                    class="border-t border-white/[0.05] mt-16 pt-8 flex flex-col md:flex-row items-center justify-between text-xs text-slate-500"
                >
                    <p>
                        &copy; {new Date().getFullYear()} L.A. Labs. All rights reserved.
                    </p>
                    <p class="mt-2 md:mt-0">
                        Founded by Luis Angel Garcia Louis.
                    </p>
                </div>
            </div>
        </footer>
    </body>
</html>
