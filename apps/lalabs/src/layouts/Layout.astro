---
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "L.A. Labs - Engineering Next-Generation Digital Ecosystems.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | L.A. Labs</title>
    </head>
    <body
        class="bg-white text-ink min-h-screen flex flex-col font-sans selection:bg-brand/20 selection:text-brand antialiased"
    >
        <!-- Persistent Background Mesh Effect -->
        <div class="fixed inset-0 z-[-1] bg-mesh pointer-events-none opacity-5">
        </div>

        <!-- Sticky Header/Nav matching image aesthetics -->
        <header
            class="fixed top-6 left-1/2 -translate-x-1/2 w-full max-w-7xl z-50 px-6"
        >
            <div
                class="px-8 h-16 bg-white/80 backdrop-blur-2xl border border-border/40 rounded-3xl flex items-center justify-between shadow-2xl shadow-ink/5"
            >
                <a href="/" class="flex items-center gap-2 group">
                    <div
                        class="w-10 h-10 bg-ink text-white rounded-xl flex items-center justify-center font-black text-sm group-hover:bg-brand transition-all duration-300 shadow-lg"
                    >
                        LA
                    </div>
                </a>

                <nav
                    class="hidden md:flex gap-10 text-[14px] font-bold text-muted uppercase tracking-widest"
                >
                    <a
                        href="/#services"
                        class="hover:text-brand transition-colors">Expertise</a
                    >
                    <a href="/#work" class="hover:text-brand transition-colors"
                        >Work</a
                    >
                    <a href="/#about" class="hover:text-brand transition-colors"
                        >About</a
                    >
                </nav>

                <div class="flex items-center">
                    <a
                        href="mailto:hello@lalabs.com"
                        class="text-xs font-bold bg-ink text-white hover:bg-brand transition duration-300 px-6 py-2.5 rounded-xl shadow-lg shadow-ink/10"
                    >
                        Contact
                    </a>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="grow">
            <slot />
        </main>

        <!-- Premium Footer -->
        <footer
            class="border-t border-border/20 bg-white pt-24 pb-12 relative overflow-hidden"
        >
            <div
                class="absolute inset-0 bg-[radial-gradient(circle_at_bottom,var(--tw-gradient-stops))] from-brand/5 via-transparent to-transparent pointer-events-none"
            >
            </div>

            <div
                class="max-w-7xl mx-auto px-6 relative z-10 text-center flex flex-col items-center"
            >
                <div
                    class="w-12 h-12 bg-ink text-white rounded-xl flex items-center justify-center font-black text-base mb-8 shadow-lg"
                >
                    LA
                </div>

                <p
                    class="text-muted text-lg max-w-sm mb-12 font-medium opacity-60"
                >
                    Engineering modern ecosystems with precision and purpose.
                </p>

                <div
                    class="border-t border-border/20 pt-10 w-full flex flex-col md:flex-row items-center justify-between text-[11px] font-bold text-muted uppercase tracking-[0.4em]"
                >
                    <p>
                        &copy; {new Date().getFullYear()} L.A. Labs. All rights reserved.
                    </p>
                    <div class="flex gap-10 mt-6 md:mt-0">
                        <a
                            href="/terms"
                            class="hover:text-brand transition-colors">Terms</a
                        >
                        <a
                            href="/privacy"
                            class="hover:text-brand transition-colors"
                            >Privacy</a
                        >
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
