---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/ui";
import { ArrowLeft, ExternalLink, Calendar, Code2 } from "lucide-astro";

export async function getStaticPaths() {
    const projects = await getCollection("projects", ({ id }) =>
        id.startsWith("es/"),
    );
    return projects.map((entry) => ({
        params: { slug: entry.id.replace("es/", "").replace(".md", "") },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const t = useTranslations("es");

// Format date
const formattedDate = entry.data.publishDate
    ? new Date(entry.data.publishDate).toLocaleDateString("es-ES", {
          year: "numeric",
          month: "long",
      })
    : null;
---

<BaseLayout title={entry.data.title} lang="es">
    <Header />

    <main class="pt-28 md:pt-36 min-h-screen pb-20 bg-canvas">
        <div class="container mx-auto px-6 max-w-4xl">
            <!-- Navigation -->
            <div class="mb-12">
                <a
                    href="/#projects"
                    class="inline-flex items-center gap-2 text-fg-muted hover:text-primary transition-all font-bold text-xs uppercase tracking-widest group"
                >
                    <ArrowLeft
                        class="w-4 h-4 group-hover:-translate-x-1 transition-transform"
                    />
                    {t("project.back")}
                </a>
            </div>

            <!-- Header Section (Minimalist & Centered) -->
            <div class="text-center mb-20">
                <div
                    class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/5 text-primary text-[10px] font-black uppercase tracking-[0.2em] mb-6 border border-primary/10"
                >
                    {t("project.case_study")}
                </div>

                <h1
                    class="text-4xl md:text-6xl font-black text-fg mb-6 tracking-tighter leading-[1.1]"
                >
                    {entry.data.title}
                </h1>

                <p
                    class="text-lg md:text-xl text-fg-muted leading-relaxed max-w-2xl mx-auto mb-10 text-pretty"
                >
                    {entry.data.description}
                </p>

                <!-- Metadata Row -->
                <div
                    class="flex flex-wrap items-center justify-center gap-x-8 gap-y-4 mb-8"
                >
                    {
                        formattedDate && (
                            <div class="flex items-center gap-2 text-fg-muted/60 text-sm font-medium">
                                <Calendar class="w-4 h-4" />
                                <span>{formattedDate}</span>
                            </div>
                        )
                    }
                    {
                        entry.data.link && (
                            <a
                                href={entry.data.link}
                                target="_blank"
                                class="flex items-center gap-2 text-primary hover:text-secondary transition-colors text-sm font-bold group"
                            >
                                <ExternalLink class="w-4 h-4 group-hover:scale-110 transition-transform" />
                                {t("project.visit")}
                            </a>
                        )
                    }
                </div>

                <!-- Tech Stack Badges -->
                <div class="flex flex-wrap justify-center gap-2 opacity-90">
                    {
                        entry.data.tags.map((tag) => (
                            <span class="px-3 py-1 bg-surface-lighter border border-border/40 rounded-lg text-[10px] font-bold uppercase text-fg-muted tracking-wider">
                                {tag}
                            </span>
                        ))
                    }
                </div>
            </div>

            <!-- Contained Hero Image (Prevent stretching) -->
            {
                entry.data.img && (
                    <div class="relative w-full rounded-2xl md:rounded-3xl overflow-hidden shadow-2xl border border-glass-border mb-24 bg-surface-lighter group max-w-4xl mx-auto">
                        <img
                            src={entry.data.img}
                            alt={entry.data.title}
                            class="w-full h-auto object-cover max-h-[600px]"
                        />
                        <div class="absolute inset-0 ring-1 ring-inset ring-white/10 rounded-2xl md:rounded-3xl pointer-events-none" />
                    </div>
                )
            }

            <!-- Main Content (Premium Prose) -->
            <div class="max-w-3xl mx-auto">
                <article class="prose prose-lg prose-invert max-w-none">
                    <Content />
                </article>

                <!-- Bottom CTA -->
                <div
                    class="mt-32 p-8 md:p-12 rounded-[2.5rem] glass border border-glass-border text-center relative overflow-hidden group"
                >
                    <div
                        class="absolute -top-24 -right-12 w-64 h-64 bg-primary/10 blur-[100px] rounded-full group-hover:bg-primary/20 transition-colors"
                    >
                    </div>

                    <h3 class="text-2xl md:text-3xl font-black text-fg mb-4">
                        {t("project.cta.title")}
                    </h3>
                    <p class="text-fg-muted mb-8 max-w-md mx-auto">
                        {t("project.cta.desc")}
                    </p>

                    <a
                        href="/#contact"
                        class="inline-flex items-center gap-3 px-8 py-4 bg-primary text-white rounded-2xl font-bold hover:bg-secondary transition-all hover:scale-105 shadow-lg shadow-primary/20 active:scale-95"
                    >
                        {t("project.cta.button")}
                        <Code2 class="w-5 h-5" />
                    </a>
                </div>
            </div>
        </div>
    </main>

    <Footer />
</BaseLayout>

<style is:global>
    /* Premium Case Study Typography */
    .prose {
        --tw-prose-invert-headings: var(--color-fg);
        --tw-prose-invert-body: var(--color-fg-muted);
        line-height: 1.8;
    }

    .prose h2 {
        font-size: 1.875rem;
        font-weight: 900;
        letter-spacing: -0.02em;
        margin-top: 4rem;
        margin-bottom: 1.5rem;
    }

    .prose h3 {
        font-size: 1.5rem;
        font-weight: 800;
        margin-top: 3rem;
        margin-bottom: 1rem;
    }

    .prose p {
        font-size: 1.125rem;
        margin-bottom: 1.75rem;
    }

    .prose strong {
        color: var(--color-primary);
        font-weight: 700;
    }

    .prose ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 2rem;
    }

    .prose li {
        position: relative;
        padding-left: 1.75rem;
        margin-bottom: 0.75rem;
    }

    .prose li::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0.7em;
        width: 6px;
        height: 6px;
        background: var(--color-primary);
        border-radius: 50%;
        opacity: 0.6;
    }
</style>
